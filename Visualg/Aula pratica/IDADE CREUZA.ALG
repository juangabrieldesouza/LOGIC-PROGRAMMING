algoritmo "idade"
var
   idade, a, b: inteiro
inicio
      Escreval("Creuza tem duvida da sua idade, ajude-a!")
      Escreval("Creuza diz: Olá, você poderia me dizer em que ano estamos?")
      Leia(a)
      Escreval("Creuza diz: E em que ano eu nasci?")
      Leia(b)
      idade <- a-b
      Escreva("Creuza pensa: Hmmm, então minha idade é ", idade, " muito obrigada")
fimalgoritmo