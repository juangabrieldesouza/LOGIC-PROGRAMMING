algoritmo "ATIVIDADE 20"
var
   n: inteiro
inicio
      Escreval("--------------")
      Escreval(" PAR OU IMPAR? ")
      Escreval("--------------")
      Escreva("Digite um número para saber se é par ou impar: ")
      Leia(n)
      se (n%2 = 1) entao
         Escreva("Esse número é impar!!")
      senao
         Escreva("Esse número é par!!")
      fimse
fimalgoritmo