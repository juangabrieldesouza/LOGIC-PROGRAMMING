algoritmo "ATIVIDADE 12"
var
   a, p: real
inicio
      Escreva("Digite o valor do produto: ")
      Leia(a)
      p <- a - ((a*5)/100)
      Escreval("Este produto tem 5% de desconto!")
      Escreval("--------------------------------")
      Escreval("produto valor: ", a, "R$")
      Escreval("desconto aplicado")
      Escreval("Total a pagar: ", p, "R$")
fimalgoritmo